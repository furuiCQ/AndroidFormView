<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FormView">
        <!--左侧图标属性-->
        <attr name="fv_left_image" format="reference" />
        <attr name="fv_left_image_max_width" format="dimension" />
        <attr name="fv_left_image_max_height" format="dimension" />
        <attr name="fv_left_image_right_margin" format="dimension" />
        <attr name="fv_left_image_scale_type">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>
        <attr name="fv_right_image" format="reference" />
        <attr name="fv_right_image_max_width" format="dimension" />
        <attr name="fv_right_image_max_height" format="dimension" />
        <attr name="fv_right_image_left_margin" format="dimension" />
        <attr name="fv_right_image_scale_type">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>
        <!--内间距-->
        <attr name="fv_left_padding" format="dimension" />
        <attr name="fv_top_padding" format="dimension" />
        <attr name="fv_bottom_padding" format="dimension" />
        <attr name="fv_right_padding" format="dimension" />
        <!--标题属性-->
        <attr name="fv_title" format="string" />
        <!--标题宽度-->
        <attr name="fv_title_width">
            <enum name="wrap_content" value="-2" />
            <enum name="weight_content" value="0" />
        </attr>
        <attr name="fv_title_min_width" format="dimension" />
        <attr name="fv_title_text_size" format="dimension" />
        <attr name="fv_title_text_style">
            <enum name="bold" value="0" />
            <enum name="italic" value="1" />
            <enum name="normal" value="2" />
        </attr>

        <attr name="fv_title_text_width" format="float" />
        <attr name="fv_title_right_margin" format="dimension" />
        <attr name="fv_title_color" format="reference|color" />
    </declare-styleable>

    <!--表单右侧输入框-->
    <declare-styleable name="FormEditView">
        <!--输入框属性-->
        <attr name="fev_hint" format="string" />
        <attr name="fev_hint_color" format="reference|color" />
        <!--top bottom 适合多行显示配合fev_text_lines>1使用-->
        <!--left right 适合单行显示-->
        <attr name="fev_text_gravity">
            <enum name="top" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="fev_text_lines" format="integer" />
        <attr name="fev_text_color" format="reference|color" />
        <attr name="fev_text_size" format="dimension" />
        <attr name="fev_text_max_length" format="integer" />
        <attr name="fev_text_inputType">
            <enum name="text" value="0" />
            <enum name="phone" value="1" />
            <enum name="password" value="2" />
            <enum name="identifyCard" value="3" />
            <enum name="number" value="4" />
            <enum name="decimal" value="5" />
        </attr>
        <attr name="fev_text_right_margin" format="dimension" />
        <attr name="fev_text_bg" format="reference" />
        <!--单位属性-->
        <attr name="fev_unit_text" format="string" />
        <attr name="fev_unit_color" format="reference|color" />
        <attr name="fev_unit_text_size" format="dimension" />
        <attr name="fev_unit_visible" format="boolean" />
        <attr name="fev_unit_right_margin" format="dimension" />
    </declare-styleable>

    <!--表单底部多行输入框-->
    <declare-styleable name="FormEditMultiView">
        <attr name="femv_title_layout_left_padding" format="dimension" />
        <attr name="femv_title_layout_top_padding" format="dimension" />
        <attr name="femv_title_layout_right_padding" format="dimension" />
        <attr name="femv_title_layout_bottom_padding" format="dimension" />

        <attr name="femv_content_left_padding" format="dimension" />
        <attr name="femv_content_top_padding" format="dimension" />
        <attr name="femv_content_right_padding" format="dimension" />
        <attr name="femv_content_bottom_padding" format="dimension" />

        <attr name="femv_count_view_visible" format="boolean" />
        <attr name="femv_count_left_text_color" format="color" />
        <attr name="femv_count_right_text_color" format="color" />
    </declare-styleable>

    <!--表单带tips输入框-->
    <declare-styleable name="FormEditTipsView">

        <attr name="fetv_tips_top_margin" format="dimension" />
        <attr name="fetv_tips_text" format="string" />
        <attr name="fetv_tips_text_color" format="reference|color" />
        <attr name="fetv_tips_text_size" format="dimension" />

    </declare-styleable>

    <!--表单图片组件-->
    <declare-styleable name="FormImageView">
        <attr name="fiv_src" format="reference" />
    </declare-styleable>

    <!--表单单选组件-->
    <declare-styleable name="FormRadioView">
        <attr name="frv_layout_min_width" format="dimension" />
        <attr name="frv_text_gravity">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="frv_text_drawable_padding" format="dimension" />
        <attr name="frv_text_drawable_left" format="reference" />
        <attr name="frv_text_drawable_top" format="reference" />
        <attr name="frv_text_drawable_right" format="reference" />
        <attr name="frv_text_drawable_bottom" format="reference" />
        <attr name="frv_left_to_right_margin" format="dimension" />
        <attr name="frv_text_color" format="reference|color" />
        <attr name="frv_text_size" format="dimension" />
        <attr name="frv_left_text" format="string" />
        <attr name="frv_right_text" format="string" />
    </declare-styleable>

    <declare-styleable name="FormSwitchView">
        <attr name="fsv_checkbox_drawable" format="reference" />
        <attr name="fsv_checkbox_right_margin" format="dimension"/>
    </declare-styleable>
</resources>